<%- layout("layouts/boilerplate.ejs")%>
<div class="form-details">
<form method="post" action="/results/search">
    <h1>Ensure inputs match the given format for correct results.</h1>
    <div class="form-inputs">
           <div>
        <label for="year">Year</label><br>
        <input type="number" placeholder="2025" name="result[year]" id="year" required>
    </div>
    <div>
        <label for="semester">Semester</label><br>
        <select name="result[semester]" id="semester" required>
            <option value="select">Select Semester</option>
            <option value="1">(Jan-June)</option>
            <option value="2">(July-Dec)</option>
        </select>
    </div>
    <div>
        <label for="term">Mid/End Term</label><br>
        <select name="result[term]" id="term" required>
            <option value="">Select Term</option>
            <option value="mid">Mid Term</option>
            <option value="end">End Term</option>
        </select>
    </div>
    <div>
        <label for="branch">Branch</label><br>
        <select name="result[branch]" id="branch">
            <option value="">Select Your Branch</option>
            <option value="CSE">CSE</option>
            <option value="ECE">ECE</option>
            <option value="EE">EE</option>
            <option value="ME">ME</option>
            <option value="CE">CE</option>
            <option value="BIO">BIO-TECH</option>
        </select>
    </div>
    <div class="div">
        <label for="subjectCode">SubjectCode</label><br>
        <input type="text" placeholder="BS-2101" name="result[subjectCode]" id="subjectCode" required>
    </div>
    <div class="search-btn">
        <button>Search</button>
    </div>
    </div>
</form>
</div>